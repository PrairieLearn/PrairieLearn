<% if (question.sync_errors) { %>
  <div class="alert alert-danger" role="alert">
    <h2 class="h5 alert-heading">Sync error</h2>
    <p>
      There was an error syncing this question; the information you see below
      may be inconsistent with this question's <code>info.json</code> file.
      Please correct the error and sync again.
    </p>
    <pre class="text-white rounded p-3 <% if (locals.course.example_course) { %>mb-0<% } %>" style="background-color: black;"><code><%- question.sync_errors_ansified %></code></pre>
    <% if (!locals.course.example_course) { %>
    <a class="btn btn-light" role="button" href="<%= urlPrefix %>/question/<%= question.id %>/file_edit/questions/<%= question.qid %>/info.json">
      <i class="fa fa-edit"></i>
      <span class="d-none d-sm-inline">Edit info.json</span>
    </a>
    <% } %>
  </div>
<% } %>
<% if (question.sync_warnings) { %>
  <div class="alert alert-warning" role="alert">
    <h2 class="h5 alert-heading">Sync warning</h2>
    <p>
      These warnings do not impact the ability to sync this question, but they
      should still be reviewed and corrected.
    </p>
    <pre class="text-white rounded p-3 <% if (locals.course.example_course) { %>mb-0<% } %>" style="background-color: black;"><code><%- question.sync_warnings_ansified %></code></pre>
    <% if (!locals.course.example_course) { %>
    <a class="btn btn-light" role="button" href="<%= urlPrefix %>/question/<%= question.id %>/file_edit/questions/<%= question.qid %>/info.json">
      <i class="fa fa-edit"></i>
      <span class="d-none d-sm-inline">Edit info.json</span>
    </a>
    <% } %>
  </div>
<% } %>
