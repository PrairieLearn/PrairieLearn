<form name="change-location-form" class="needs-validation" method="POST" novalidate>
    <input type="hidden" name="__action" value="change_location">
    <input type="hidden" name="__csrf_token" value="<%= __csrf_token %>">
    <div class="container p-0 mb-4">
      Use only letters, numbers, dashes, and underscores, with no spaces.
    </div>
    <div class="form-group">
        <label for="changeLocation"><%= id_label %>:</label>
        <select class="custom-select" name="id" id="changeLocation">
            <option value="question" <% if (id_old == "question") { %>selected<% } %>>question</option>
            <option value="clientFilesCourse" <% if (id_old == "clientFilesCourse") { %>selected<% } %>>clientFilesCourse</option>
            <option value="public" <% if (id_old == "public") { %>selected<%}%>>public</option>
        </select>
        <div class="invalid-feedback" id="invalidIdMessage">
        </div>
    </div>
    <div class="text-right">
        <button type="button" class="btn btn-secondary" onclick="$('#<%= buttonID %>').popover('hide')">Cancel</button>
        <button type="submit" class="btn btn-primary">Change</button>
    </div>
</form>

<script>
    $(function() {
        const validateId = function() {
            let element = $('input[name="id"]');
            let elementDOM = element.get(0);
            let id_new = $(element).val();

            if (id_new === "<%= id_old %>") {
                elementDOM.setCustomValidity('Must be changed');
                $('#invalidIdMessage').text('Must be changed');
                return;
            }
        }

        $('input[name="id"]').on('input', validateId);
        $('input[name="id"]').on('change', validateId);

        $('form[name="change-id-form"]').submit(function(event) {
            validateId();
            if ($(this).get(0).checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }
            $(this).addClass('was-validated');
        });
    });
</script>
