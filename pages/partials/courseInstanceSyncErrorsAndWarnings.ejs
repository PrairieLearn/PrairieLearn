<% if (course_instance.sync_errors) { %>
  <div class="alert alert-danger" role="alert">
    <h2 class="h5 alert-heading">Sync error</h2>
    <p>
      There was an error syncing this course instance; the information you see below
      may be inconsistent with this course instances's <code>infoCourseInstance.json</code> file.
      Please correct the error and sync again.
    </p>
    <pre class="bg-dark text-white rounded p-3 <% if (locals.course.example_course) { %>mb-0<% } %>"><code><%= course_instance.sync_errors %></code></pre>
    <% if (!locals.course.example_course) { %>
    <a class="btn btn-light" role="button" href="<%= urlPrefix %>/instance_admin/edit?file=courseInstances/<%= course_instance.short_name %>/infoCourseInstance.json">
      <i class="fa fa-edit"></i>
      <span class="d-none d-sm-inline">Edit infoCourse.json</span>
    </a>
    <% } %>
  </div>
<% } %>
<% if (course_instance.sync_warnings) { %>
  <div class="alert alert-warning" role="alert">
    <h2 class="h5 alert-heading">Sync warning</h2>
    <p>
      These warnings do not impact the ability to sync this course instance, but they
      should still be reviewed and corrected.
    </p>
    <pre class="bg-dark text-white rounded p-3 <% if (locals.course.example_course) { %>mb-0<% } %>"><code><%= course_instance.sync_warnings %></code></pre>
    <% if (!locals.course.example_course) { %>
    <a class="btn btn-light" role="button" href="<%= urlPrefix %>/instance_admin/edit?file=courseInstances/<%= course_instance.short_name %>/infoCourseInstance.json">
      <i class="fa fa-edit"></i>
      <span class="d-none d-sm-inline">Edit infoCourse.json</span>
    </a>
    <% } %>
  </div>
<% } %>
