<% if (authz_data.has_course_instance_permission_view) { %>
    <div class="card mb-4 border-success">
      <div class="card-header bg-success">Grading Panel</div>
      <div class="card-body">
        <% if (typeof submission_updated !== 'undefined' && submission_updated === true) { %>
            <blockquote style="color: red">Submission updated</blockquote>
        <% } %>
        <a role="button" class="btn btn-primary mb-2" href="<%= urlPrefix %>/assessment/<%= assessment_instance.assessment_id %>/manual_grading/assessment_question/<%= instance_question.assessment_question_id %>">
          <i class="fas fa-arrow-left"></i>
          Back to Question
        </a>

        <form name="instance_question-manual-grade-update-form" method="POST">
            <input type="hidden" name="__csrf_token" value="<%= __csrf_token %>">
            <input type="hidden" name="assessment_id" value="<%= assessment_instance.assessment_id %>">
            <input type="hidden" name="assessment_question_id" value="<%= instance_question.assessment_question_id %>">
            <div class="form-group">
              <label for="submissionScorePoints">Score:</label>
              <div class="input-group">
                <input type="number" min="0" max="<%= assessment_question.max_points %>" step="any" class="form-control"
                       id="submissionScorePoints" name="submission_score_points" value="<%= instance_question.points %>" aria-describedby="scoreHelpBlock"
                       <% if (!authz_data.has_course_instance_permission_edit) { %>disabled<% } %>
                       oninput="$('#submissionScorePercent').val(this.value * 100 / <%= assessment_question.max_points %>);"
                       />
                <span class="input-group-append input-group-text">/ <%= assessment_question.max_points %></span>
              </div>
              <div class="input-group">
                <input type="number" min="0" max="100" step="any" class="form-control"
                       id="submissionScorePercent" name="submission_score_percent" value="<%= instance_question.score_perc %>" aria-describedby="scoreHelpBlock"
                       <% if (!authz_data.has_course_instance_permission_edit) { %>disabled<% } %>
                       oninput="$('#submissionScorePoints').val(this.value * <%= assessment_question.max_points %> / 100);"
                       />
                <span class="input-group-append input-group-text">%</span>
              </div>
            </div>
            <div class="form-group">
              <label for="submission-feedback">Feedback:</label>
              <textarea name="submission_note" class="form-control"
                        <% if (!authz_data.has_course_instance_permission_edit) { %>readonly<% } %>
                        id="submission-feedback"><%= submission.feedback?.manual %></textarea>
            </div>
            <div class="text-right">
              <% if (authz_data.has_course_instance_permission_edit) { %>
              <button type="submit" class="btn btn-primary" name="__action" value="add_manual_grade">Submit</button>
              <% } %>
              <div class="btn-group">
                <a role="button" class="btn btn-secondary"
                   href="<%= urlPrefix %>/assessment/<%= assessment_instance.assessment_id %>/manual_grading/assessment_question/<%= instance_question.assessment_question_id %>/next_ungraded?prior_instance_question_id=<%= instance_question.id %>">
                  <% if (authz_data.has_course_instance_permission_edit) { %>Skip<% } else { %>Next<% } %>
                </a>
                <% if (authz_data.has_course_instance_permission_edit) { %>
                <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="sr-only">Change assigned grader</span>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                  <button type="submit" class="dropdown-item" name="__action" value="reassign_nobody">Remove grader assignment</button>
                  <%# TODO: Assign to other graders, read course staff %>
                </div>
                <% } %>
              </div>
            </div>
        </form>
      </div>
      <div class="card-footer small">
          This box is not visible to students.
      </div>
    </div>
<% } %>
