<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head'); %>
        <script src="/javascripts/lodash.min.js"></script>
        <script src="/javascripts/d3.min.js"></script>
        <script src="/localscripts/histmini.js"></script>
    </head>
    <body>
        <script>
            $(function () {
                $('[data-toggle="popover"]').popover({sanitize: false})
            });
        </script>
        <%- include('../partials/navbar'); %>
        <div id="content" class="container-fluid">
            <%- include('../partials/navtabs'); %>
            <div class="card mb-4">
                <div class="card-header bg-primary">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-auto">
                            <span class="text-white">Course instances</span>
                        </div>
                        <% if ((authz_data.has_course_permission_edit) && (! course.options.isExampleCourse)) { %>
                        <div class="col-auto">
                            <form name="add-course-instance-form" method="POST">
                                <input type="hidden" name="__csrf_token" value="<%= __csrf_token %>">
                                <button name="__action" value="add_course_instance" class="btn btn-sm btn-light"><i class="fa fa-plus" aria-hidden="true"></i>
                                <span class="d-none d-sm-inline">Add course instance</span></button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Long Name</th>
                                <th>CIID</th>
                                <th class="text-center">
                                    Order By
                                    <a role="button" class="btn btn-xs btn-light" data-placement="auto" data-trigger="focus" data-toggle="popover" data-html="true" title="Order By" tabindex="0" data-content="Course instances are listed in descending order of this number. If you like, you can change this number for a course instance - and so change the order in which course instances are displayed to both you and your students - by setting the property <code>orderBy</code> in the course instance's configuration file (<code>infoCourseInstance.json</code>)."><i class="far fa-question-circle" aria-hidden="true"></i></a>
                                </th>
                                <th class="text-center">Students</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rows.forEach(function(row) { %>
                                <tr>
                                    <td><a href="<%= plainUrlPrefix %>/course_instance/<%= row.id %>/instructor/instance_admin"><%= row.long_name %></a></td>
                                    <td><%= row.short_name %></td>
                                    <td class="text-center"><%= row.order_by %></td>
                                    <td class="text-center"><%= row.number %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
