<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
    <link href="/stylesheets/issues.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar', {navPage: 'announcements'}); %>
    <div id="content" class="container">
      <%- include('../partials/navtabs'); %>

      <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex">
          Announcements
        </div>

        <% if (rows.length == 0) { %>
        <div class="card-body">
          <div class="text-center text-muted">No announcements</div>
        </div>
        <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <tbody>
              <% rows.forEach(row => { %>
              <tr>
                <td class="align-middle" style="width: 1%; white-space: nowrap;">
                  <%= row.formatted_date %>
                </td>
                <td class="align-middle">
                  <a href="<%= urlPrefix %>/announcement/<%= row.id %>/">
                    <%= row.title %>
                    <% if (row.unread) { %>
                    <span class="badge badge-danger ml-2">Unread</span>
                    <% } %>
                  </a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>

      </div>
    </div>
  </body>
</html>
