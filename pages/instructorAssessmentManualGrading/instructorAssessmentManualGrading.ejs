<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link href="<%= node_modules_asset_path('tablesorter/dist/css/theme.bootstrap.min.css') %>" rel="stylesheet" />
    <script src="<%= node_modules_asset_path('tablesorter/dist/js/jquery.tablesorter.min.js') %>"></script>
    <script src="<%= node_modules_asset_path('tablesorter/dist/js/jquery.tablesorter.widgets.min.js') %>"></script>
  </head>
  <body>
    <%- include('../partials/navbar'); %>
    <div id="content" class="container-fluid">
      <%- include('../partials/assessmentSyncErrorsAndWarnings'); %>

      <% if (num_open_instances > 0) { %>
      <div class="alert alert-warning" role="alert">
        <% if (num_open_instances == 1) { %>
        This assessment currently has one open instance.
        <% } else { %>
        This assessment currently has <%= num_open_instances %> open instances.
        <% } %>
        Please ensure all students have completed their assessments before grading. You may close all open instances on the <a href="<%= urlPrefix %>/assessment/<%= assessment.id %>/instances">Students tab</a>.
      </div>
      <% } %>
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <%= assessment_set.name %> <%= assessment.number %>: Manual Grading Queue
        </div>

        <div class="table-responsive">
          <table id="instanceQuestionGradingTable" class="table table-sm table-hover">
            <thead>
              <tr>
                <th></th>
                <th>QID</th>
                <th>Points</th>
                <th>Submissions to grade</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% questions.forEach(function(question, i) { %>
              <tr <% if (question.num_instance_questions_assigned > 0) { %>class="bg-light"<% } %> >
                <td>
                  <a href="<%= urlPrefix %>/assessment/<%= assessment.id %>/assessment_question/<%= question.id %>/manual_grading">
                    <% if (question.alternative_group_size == 1) { %>
                    <%= question.alternative_group_number %>.
                    <% } else { %>
                    <%= question.alternative_group_number %>.<%= question.number_in_alternative_group %>.
                    <% } %>
                    <%= question.title %>
                  </a>
                </td>
                <td><%= question.qid %></td>
                <td>
                  <% if (assessment.type == "Exam") { %><%= question.points_list %><% } %>
                  <% if (assessment.type == "Homework") { %><%= question.init_points %>/<%= question.max_points %><% } %>
                </td>
                <td>
                  <%= question.num_instance_questions_to_grade ?? 0 %> /
                  <%= question.num_instance_questions ?? 0 %>
                  <% if (question.num_instance_questions_assigned > 0) { %>
                  <small class="text-muted">(<%= question.num_instance_questions_assigned ?? 0 %> assigned to you)</small>
                  <% } else if (question.num_instance_questions_unassigned > 0) { %>
                  <small class="text-muted">(<%= question.num_instance_questions_unassigned ?? 0 %> unassigned)</small>
                  <% } %>
                </td>
                <td>
                  <% if (question.num_instance_questions_assigned > 0 || question.num_instance_questions_unassigned > 0) { %>
                  <a class="btn btn-sm btn-primary" href="<%= urlPrefix %>/assessment/<%= assessment.id %>/assessment_question/<%= question.id %>/next_ungraded">
                    Grade next submission
                  </a>
                  <% } %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </body>
</html>
