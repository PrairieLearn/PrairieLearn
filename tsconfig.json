{
  "extends": "@prairielearn/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  // Individual apps/packages have their own `tsconfig.json` files. This
  // top-level one is used to typecheck the `tools/` directory, and to
  // configure eslint and dependency-cruiser.
  "include": ["tools/**/*"]
}
