{
  "name": "@prairielearn/eslint-plugin",
  "version": "2.1.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrairieLearn/PrairieLearn.git",
    "directory": "packages/eslint-plugin"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "test": "c8 vitest run src/**/*.test.ts"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.32.1"
  },
  "devDependencies": {
    "@prairielearn/tsconfig": "workspace:^",
    "@types/node": "^20.17.32",
    "@typescript-eslint/rule-tester": "^8.32.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "c8": {
    "reporter": [
      "html",
      "text-summary",
      "cobertura"
    ],
    "all": true,
    "include": [
      "src/**"
    ]
  }
}
