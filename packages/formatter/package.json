{
  "name": "@prairielearn/formatter",
  "version": "1.2.0",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrairieLearn/PrairieLearn.git",
    "directory": "packages/formatter"
  },
  "scripts": {
