    "c8": "^9.1.0",
    "chai": "^5.1.1",
    "mocha": "^10.4.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "c8": {
    "reporter": [
      "html",
      "text-summary",
      "cobertura"
