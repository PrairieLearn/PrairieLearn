{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "noEmit": true,
    "rootDir": "../../",
    "outDir": "../../public/build/scripts",
    "types": ["jquery", "bootstrap"],
    "strict": true,
    // Support native ESM, which esbuild supports.
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["**/*"]
}
