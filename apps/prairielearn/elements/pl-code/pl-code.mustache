{{#copy_code_button}}
<script>
$(function(){
    PrairieUtil.initCopyButton('#pl-code-button-{{uuid}}');
});
</script>
{{/copy_code_button}}

<div class="pl-code mb-3 {{#show_line_numbers}}show-line-numbers{{/show_line_numbers}}"
    style="--pl-code-background-color: {{background_color}}; --pl-code-line-number-color: {{line_number_color}};">
    <div
        id="pl-code-{{uuid}}"
        class="rounded {{#prevent_select}}user-select-none{{/prevent_select}}"
        {{#prevent_select}}
        onselectstart="return false;"
        onmousedown="return false;"
        oncontextmenu="return false;"
        {{/prevent_select}}
    >{{{code}}}</div>

    {{#copy_code_button}}
    <button
        id="pl-code-button-{{uuid}}"
        type="button"
        class="btn btn-secondary btn-sm copy-button"
        data-clipboard-target="#pl-code-{{uuid}} td.code"
    >
        copy this text
    </button>
    {{/copy_code_button}}
</div>
