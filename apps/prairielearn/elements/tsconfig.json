{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "rootDir": "../",
    "types": [
      "jquery",
      "bootstrap",
      "cropperjs",
      "dompurify",
      "socket.io-client",
      "quill",
      "lodash"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["**/*.js", "**/*.d.ts"],
  "exclude": ["pl-threejs/**", "pl-drawing/mechanicsObjects.js"]
}
