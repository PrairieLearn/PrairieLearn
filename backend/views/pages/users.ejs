<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbar', {navPage: 'users'}); %>
    <div id="content" class="container">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Users</h3>
        </div>

        <div class="panel-body">
          <p>
            Download <a href="<%= urlPrefix %>/users/<%= csv_filename %>"><%= csv_filename %></a>
          </p>
        </div>

        <div class="table-responsive">
          <table class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>UID</th>
                <th>Name</th>
                <th>Role</th>
                <% course_tests.forEach(function(test) { %>
                <th>
                  <a href="<%= urlPrefix %>/tests/<%= test.id %>" class="btn btn-<%= test.color %> btn-xs" role="button">
                    <%= test.label %>
                  </a>
                </th>
                <% }); %>
              </tr>
            </thead>
            <tbody>
              <% user_scores.forEach(function(row) { %>
              <tr>
                <td><%= row.uid %></td>
                <td><%= row.user_name %></td>
                <td><%= row.role %></td>
                <% row.scores.forEach(function(score) { %>
                <td>
                  <% if (score == null) { %>
                  â€”
                  <% } else { %>
                  <%= score %>%
                  <% } %>
                </td>
                <% }); %>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
