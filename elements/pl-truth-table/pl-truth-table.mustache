{{#question}}
<div id="pl-truth-table-{{uuid}}" class="pl-truth-table-container">
<table>
    <tr>
    {{#inputs}}
        <td>{{html}}</td>
    {{/inputs}}
    {{#answer_columns}}
        <td>{{{html}}}</td>
    {{/answer_columns}}
    </tr>
{{#rows}}
    <tr>
    {{#values}}
        <td>{{html}}</td>
    {{/values}}
    {{#answer_columns}}
        <td>
            <select name="{{name}}" class="form-control">
                <option value="True">{{true_label}}</option>
                <option value="False">{{false_label}}</option>
            </select>
        {{#display_score_badge}}
            <div>
            {{#correct}}
                <span class="badge badge-success"><i class="fa fa-check" aria-hidden="true"></i></span>
            {{/correct}}
            {{^correct}}
                <span class="badge badge-danger"><i class="fa fa-times" aria-hidden="true"></i></span>
            {{/correct}}
            </div>
        {{/display_score_badge}}
        </td>
    {{/answer_columns}}
    </tr>
{{/rows}}
</table>
</div>
{{/question}}

{{#submission}}
<div id="pl-truth-table-{{uuid}}" class="pl-truth-table-container">
<table>
    <tr>
    {{#inputs}}
        <td>{{html}}</td>
    {{/inputs}}
    {{#answer_columns}}
        <td>{{{html}}}</td>
    {{/answer_columns}}
    </tr>
{{#rows}}
    <tr>
    {{#values}}
        <td>{{html}}</td>
    {{/values}}
    {{#student_answers}}
        <td><strong>{{html}}</strong>
        {{#parse_error}}
            <span class="badge text-danger badge-invalid"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Invalid</span>
            <a href="javascript:void(0);" role="button" class="btn btn-sm btn-secondary small border" data-placement="auto" data-trigger="focus" data-toggle="popover" data-html="true" style="margin-left: 5px" title="Format Error" tabindex="0" data-content="{{parse_error}}"> Why <i class="fa fa-question-circle" aria-hidden="true"></i></a>
        {{/parse_error}}
        {{#display_score_badge}}
            <div>
            {{#correct}}
                <span class="badge badge-success"><i class="fa fa-check" aria-hidden="true"></i></span>
            {{/correct}}
            {{^correct}}
                <span class="badge badge-danger"><i class="fa fa-times" aria-hidden="true"></i></span>
            {{/correct}}
            </div>
        {{/display_score_badge}}
    {{/student_answers}}
    </td>
</tr>
{{/rows}}
</table>
</div>
{{/submission}}

