{{#question}}
    <div id="pl-dropdown-{{uuid}}" class="d-inline-block form-group">
        <select name="{{answers-name}}" class="form-control">

    {{#options}}
        <option value="{{.}}">{{.}}</option>
    {{/options}}

        </select>
    </div>
{{/question}}

{{#submission}}
    <span class="badge badge-warning d-inline">{{submitted-answer}}</span>
{{/submission}}

{{#answer}}
        <span class="badge badge-success d-inline">{{correct-answer}}</span>
{{/answer}}
