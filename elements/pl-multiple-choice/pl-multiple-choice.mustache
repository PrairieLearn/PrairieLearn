    {{/correct}}
    {{#incorrect}}
        <span class="badge badge-danger"><i class="fa fa-check" aria-hidden="true"></i> 0%</span>
    {{/incorrect}}
    {{#partial}}
        <span class="badge badge-danger"><i class="fa fa-check" aria-hidden="true"></i> {{partial}}%</span>
    {{/partial}}
{{/display_score_badge}}
    
{{/parse_error}}
